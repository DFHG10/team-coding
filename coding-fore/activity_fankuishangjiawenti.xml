<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFFC5"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@null"
            android:src="@drawable/return11"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="62dp"
            android:background="#BBBBBB" />



        <TextView
            android:id="@+id/shangjiawenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈商家问题"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:textColor="#45DD7C"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入要反馈的商家信息（如店名、位置等）："

            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:textSize="18dp"
            />

        <EditText
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:background="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入要反馈的类型："
            android:layout_marginLeft="30dp"
            android:layout_marginTop="165dp"
            android:textSize="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                                                                "
            android:background="#FFFFFF"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="195dp"
            android:textSize="21dp"
            />

        <Spinner
            android:id="@+id/drop1"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="195dp"
            android:gravity="left"
            android:entries="@array/leixing"
            android:spinnerMode="dialog"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入反馈详情："
            android:layout_marginLeft="30dp"
            android:layout_marginTop="240dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/textt"
            android:layout_width="330dp"
            android:layout_height="290dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="270dp"
            android:hint="请在此输入"
            android:gravity="top"
            android:background="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:background="#FFFFFF"
            android:Onclick="showToast"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>